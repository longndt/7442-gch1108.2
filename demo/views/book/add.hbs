<form action="/book/add" method="post">
   <h1>Add new book</h1>
   <input type="text" placeholder="Enter book title" name="title" required minlength="5" max="50">
   <br><br>
   <select name="genre">
      <option value="Self-helf">Self-helf</option>
      <option value="IT">IT</option>
      <option value="Business">Business</option>
      <option value="Life">Life</option>
      <option value="Novel">Novel</option>
   </select>
   <br><br>
   <input type="number" name="price" placeholder="Enter book price" required min="1" max="1000">
   <br><br>
   <input type="url" name="cover" placeholder="Enter book cover url" required>
   <br><br>
   <input type="submit" value="Add">
</form>